<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TimeManagement"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/clock_in"
    android:layout_toEndOf="@+id/clock_in">

    <TextView android:text="@string/work_day" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clock_out"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stop_alerts"
        android:id="@+id/button_check_out"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@color/leanred"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="20dp" />
</LinearLayout>
